    <ImageView
        android:id="@+id/image_thumb"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@color/colorDarkSlate"
        android:scaleType="centerCrop"
        android:cropToPadding="true"/>

</RelativeLayout>